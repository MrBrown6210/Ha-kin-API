// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @default(uuid()) @id
  email String @unique
  name String
}

model Restaurant {
  id String @default(uuid()) @id
  name String
  slug String @unique
  // stars Int
  // reviewers Int
  tag String[]
  averageCost Int
  coverImageURL String
  images String[]
  phoneNumber String
  address String
  facilities String[]
}